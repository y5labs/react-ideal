@import url("../node_modules/modern-normalize/modern-normalize.css");

$primary ?= #364A57
$secondary ?= #939CA3
$orange = #FF8C00
$altitude = #1996b0

article
  height 100%

.wrapper
  display grid
  grid-template-columns auto 1fr
  grid-template-rows auto 1fr
  grid-column-gap 0px
  grid-row-gap 0px
  height 100%

.task-title
  grid-row-start 1
  grid-column-start 1
  grid-row-end 1
  grid-column-end 1
  border-bottom 1px solid $primary
  border-right 1px dashed rgba($secondary, 0.2)
  display inline-flex
  align-items center
  padding 0 10px

.task-axis
  -ms-overflow-style none
  scrollbar-width none
  overflow auto
  grid-row-start 2
  grid-column-start 1
  grid-row-end 3
  grid-column-end 2
  width 240px

  &::-webkit-scrollbar
    display none

  & > div > div 
    display inline-flex
    align-items center
    padding 0 10px
    position absolute
    top 0
    left 0
    width 240px
    border-right 1px dashed rgba($secondary, 0.2)
    
.timeline-axis
  overflow hidden
  grid-row-start 1
  grid-column-start 2
  grid-row-end 2
  grid-column-end 3
  height 32px
  font-size 14px

  & > div > div
    display inline-flex
    align-items center
    justify-content space-between
    padding 0 10px
    position absolute
    top 0
    left 0
    border-bottom 1px solid $primary
    // border-bottom 1px dashed rgba($secondary, 0.2)
    border-left 1px solid rgba($secondary, 0.4)
    height 32px
    & > :first-child
      color $primary
    & > span.red
      color red

.schedule-grid
  overflow auto
  grid-row-start 2
  grid-column-start 2
  grid-row-end 3
  grid-column-end 3
  & > div > div
    position absolute
    top 0
    left 0
    border-left 1px solid rgba($secondary, 0.2)
    // border-bottom 1px dashed rgba($secondary, 0.2)
  .s, .e, .m
    border-color $primary
    margin-top 5px
    height 16px
    border-top 1px solid $primary
    border-bottom 2px solid $primary
    margin-bottom -1px
  .s
    border-top-left-radius 4px
    border-bottom-left-radius 4px
    border-left 1px solid $primary
  .e
    border-top-right-radius 4px
    border-bottom-right-radius 4px
    border-right 1px solid $primary
  .selected > div > div,
  .d
    border 0
    border-top 2px solid $orange
    border-bottom 2px solid $orange
    border-radius 0
    cursor move
    &.s
      border-left 2px solid $orange
    &.e
      border-right 2px solid $orange  
  .imposter > div
    opacity .3

.handle-start,
.handle-end
  position absolute
  top 0
  & > div
    height 26px
    width 26px
    padding-top 5px
    cursor ew-resize
    & > div
      height 16px
      border 2px solid $orange
.handle-start
  left -25
  & > div
    padding-left 18px
    & > div
      border-top-left-radius 4px
      border-bottom-left-radius 4px
      border-right 0
      background repeating-linear-gradient(
        270deg,
        $orange,
        $orange 1px,
        white 1px,
        white 2px
      )
.handle-end
  left -1
  & > div
    padding-right 18px
    & > div
      border-top-right-radius 4px
      border-bottom-right-radius 4px
      border-left 0
      background repeating-linear-gradient(
        90deg,
        $orange,
        $orange 1px,
        white 1px,
        white 2px
      )

.filters
  display flex
  flex-direction row
  gap 20px
  padding 10px
  border-bottom 1px solid $primary

nav.timescales
  align-self flex-end
  margin-left auto
  display flex
  gap 5px
  & > button
    margin 0
    border 0
    border-radius 4px;
    background none
    padding 5px
    font-size 14px
    color $primary
    cursor pointer
  & > button.selected
    background $altitude
    font-weight bold
    color white
  & > button:not(.selected):hover
    background #e0e0e0
    color $primary